---
import { AUTHOR_NAME, SOCIAL_LINKS } from '../consts';

// Get current year for copyright
const currentYear = new Date().getFullYear();
---

<footer>
	<div class="footer-content">
		<div class="footer-section">
			<p class="copyright">
				&copy; {currentYear} {AUTHOR_NAME}. All rights reserved.
			</p>
			<p class="tagline">
				Building the future, one line of code at a time.
			</p>
		</div>
		<div class="footer-section">
	<div class="social-links">
				<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
					<span class="sr-only">Follow thoggo on LinkedIn</span>
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
						<rect x="2" y="9" width="4" height="12"></rect>
						<circle cx="4" cy="4" r="2"></circle>
					</svg>
				</a>
				<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
					<span class="sr-only">Follow thoggo on GitHub</span>
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
					</svg>
				</a>
				<a href={SOCIAL_LINKS.website} target="_blank" rel="noopener noreferrer" aria-label="Website">
					<span class="sr-only">Visit thoggo's website</span>
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="12" cy="12" r="10"></circle>
						<line x1="2" y1="12" x2="22" y2="12"></line>
						<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
					</svg>
				</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		margin-top: auto;
		padding: 2rem 1rem;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		border-top: 1px solid rgba(var(--gray), 0.2);
		transition: all 0.3s ease;
	}

	.footer-content {
		max-width: 720px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}

	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.copyright {
		margin: 0;
		font-size: 0.9rem;
		color: rgb(var(--gray-dark));
		font-weight: 500;
	}

	.tagline {
		margin: 0;
		font-size: 0.8rem;
		color: rgb(var(--gray));
		font-style: italic;
	}

	.social-links {
		display: flex;
		gap: 0.75rem;
		align-items: center;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: 50%;
		background: rgba(var(--accent), 0.1);
		color: var(--accent);
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-links a:hover {
		background: var(--accent);
		color: white;
		transform: translateY(-2px) scale(1.1);
	}

	@media (max-width: 720px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.footer-section {
			align-items: center;
		}

		.social-links {
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		footer {
			padding: 1.5rem 1rem;
		}

		.copyright {
			font-size: 0.8rem;
		}

		.tagline {
			font-size: 0.75rem;
		}

		.social-links a {
			width: 32px;
			height: 32px;
		}
	}
</style>