---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
---

<header>
	<div class="header-content">
		<div class="brand-section">
			<h2><a href="/">
				<span class="w-12 h-12">
					<svg fill="var(--accent)" height="22" width="22" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg" transform="rotate(135)"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M136.6 138.79a64.003 64.003 0 0 0-43.31 41.35L0 460l14.69 14.69L164.8 324.58c-2.99-6.26-4.8-13.18-4.8-20.58 0-26.51 21.49-48 48-48s48 21.49 48 48-21.49 48-48 48c-7.4 0-14.32-1.81-20.58-4.8L37.31 497.31 52 512l279.86-93.29a64.003 64.003 0 0 0 41.35-43.31L416 224 288 96l-151.4 42.79zm361.34-64.62l-60.11-60.11c-18.75-18.75-49.16-18.75-67.91 0l-56.55 56.55 128.02 128.02 56.55-56.55c18.75-18.75 18.75-49.15 0-67.91z"></path></g></svg>
				</span>
				{SITE_TITLE}
			</a></h2>
			<p class="brand-subtitle">Building the future, one line of code at a time</p>
		</div>
		<div class="nav-section">
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
			<div class="social-links">
				<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
					<span class="sr-only">Follow thoggo on LinkedIn</span>
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
						<rect x="2" y="9" width="4" height="12"></rect>
						<circle cx="4" cy="4" r="2"></circle>
					</svg>
				</a>
				<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
					<span class="sr-only">Follow thoggo on GitHub</span>
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
					</svg>
				</a>
			</div>
		</div>
	</div>
</header>

<style>
	header {
		margin: 0;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
		transition: all 0.3s ease;
		border-bottom: 1px solid rgba(var(--gray), 0.2);
	}

	.header-content {
		width: 960px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 1.5em 1em;
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}

	.brand-section {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	h2 {
		margin: 0;
		font-size: 1.4em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
		transition: all 0.3s ease;
	}

	h2 a:hover {
		transform: scale(1.05);
	}

	.brand-subtitle {
		margin: 0;
		font-size: 0.7rem;
		color: rgb(var(--gray));
		font-style: italic;
		font-weight: 400;
	}

	.nav-section {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	.internal-links {
		display: flex;
		gap: 0.5rem;
	}

	.internal-links a {
		padding: 0.5em 0.75em;
		color: rgb(var(--black));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
		font-size: 0.9rem;
	}

	.internal-links a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.internal-links a:hover {
		color: var(--accent);
		transform: translateY(-1px);
	}

	.social-links {
		display: flex;
		gap: 0.75rem;
		align-items: center;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: 50%;
		background: rgba(var(--accent), 0.1);
		color: var(--accent);
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-links a:hover {
		background: var(--accent);
		color: white;
		transform: translateY(-2px) scale(1.1);
	}

	@media (max-width: 720px) {
		.header-content {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}

		.brand-section {
			align-items: center;
		}

		.nav-section {
			flex-direction: column;
			gap: 1rem;
		}

		.internal-links {
			justify-content: center;
		}

		.social-links {
			display: none;
		}
	}

	@media (max-width: 480px) {
		header {
			padding: 1.5rem 1rem;
		}

		h2 {
			font-size: 1.2rem;
		}

		.brand-subtitle {
			font-size: 0.65rem;
		}

		.internal-links a {
			padding: 0.5em 0.5em;
			font-size: 0.8rem;
		}

	}
</style>
