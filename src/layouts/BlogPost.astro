---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import ReadTime from '../components/ReadTime.astro';
import AuthorInfo from '../components/AuthorInfo.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	content?: string;
};

const { title, description, pubDate, updatedDate, heroImage, content = '' } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 2rem;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				transition: transform 0.3s ease;
			}
			.hero-image img:hover {
				transform: scale(1.02);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 2em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 1rem 0;
				background: linear-gradient(45deg, rgb(var(--black)), var(--accent));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.meta-info {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1.5rem;
				margin-bottom: 1rem;
				flex-wrap: wrap;
			}
			.date {
				color: rgb(var(--gray));
				font-size: 0.95rem;
			}
			.last-updated-on {
				font-style: italic;
				color: rgb(var(--gray));
				font-size: 0.9rem;
				text-align: center;
				margin-top: 0.5rem;
			}
			.divider {
				width: 60px;
				height: 3px;
				background: linear-gradient(45deg, var(--accent), #4f46e5);
				border: none;
				border-radius: 2px;
				margin: 1.5rem auto;
			}
			
			/* Enhanced prose styling */
			.prose h2 {
				margin-top: 2.5rem;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid rgba(var(--accent), 0.2);
			}
			
			.prose h3 {
				margin-top: 2rem;
				margin-bottom: 0.75rem;
			}
			
			.prose ul, .prose ol {
				margin: 1.5rem 0;
				padding-left: 2rem;
			}
			
			.prose li {
				margin-bottom: 0.5rem;
			}
			
			@media (max-width: 720px) {
				.meta-info {
					flex-direction: column;
					gap: 0.75rem;
				}
				
				.title h1 {
					font-size: 2.2rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt={title} />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="meta-info">
							<div class="date">
								<FormattedDate date={pubDate} />
							</div>
							<ReadTime content={content} />
						</div>
						<h1>{title}</h1>
						<div class="divider"></div>
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<slot />
					<AuthorInfo />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
